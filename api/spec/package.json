{
    "name": "spec",
    "version": "1.0.0",
    "description": "",
    "scripts": {
      "clean": "rm -rf ../sdk ../docs",
      "build": "pnpm clean && pnpm gen:sdk && pnpm gen:docs",
      "start:dev": "prism mock tcgm-api.yaml",
      "gen:sdk": "openapi-generator-cli generate -i tcgm-api.yaml -g typescript-angular --global-property models -o ../sdk",
      "gen:docs": "redocly build-docs tcgm-api.yaml --theme.openapi.disableSearch -o ../docs/index.html"
    },
    "devDependencies": {
      "@openapitools/openapi-generator-cli": "^2.6.0",
      "@redocly/cli": "1.0.0-beta.125",
      "@stoplight/prism-cli": "^4.13.0"
    }
  }